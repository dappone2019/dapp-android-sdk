<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/color_fff" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/dp_20" />
            <stroke android:width="@dimen/dp_line" android:color="@color/color_428af9" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/color_428af9" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/dp_20" />
            <stroke android:width="@dimen/dp_line" android:color="@color/color_428af9" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/color_a0c4fc" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/dp_20" />
            <stroke android:width="@dimen/dp_line" android:color="@color/color_a0c4fc" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/color_a0c4fc" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->

            <stroke android:width="@dimen/dp_line" android:color="@color/color_a0c4fc" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
        </shape>
    </item>
</selector>